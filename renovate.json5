{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  timezone: 'Asia/Tokyo',
  schedule: [
    'before 4am on Monday',
  ],
  enabledManagers: [
    'github-actions',
    'pub',
  ],
  customManagers: [
    {
      customType: 'regex',
      fileMatch: [
        '^fvm_config.json$',
      ],
      matchStrings: [
        '"flutterSdkVersion": "(?<currentValue>.*?)"\n',
      ],
      depNameTemplate: 'fvm',
      datasourceTemplate: 'flutter-version',
      versioningTemplate: 'semver',
    },
  ],
  packageRules: [
    {
      groupName: 'Flutter/Dart Packages',
      matchPackageNames: [
        'flutter',
        'flutter_localizations',
        'flutter_test',
        'dart',
        'fvm',
      ],
    },
    {
      groupName: 'Firebase Packages',
      matchPackageNames: [
        'cloud_firestore',
        'firebase_storage',
        'firebase_messaging',
        'firebase_remote_config',
        'firebase_crashlytics',
        'firebase_analytics',
        'firebase_auth',
        'firebase_core',
        'firebase_dynamic_links',
        'firebase_messaging',
      ],
    },
    {
      groupName: 'All minor and patch dependencies',
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      excludePackageNames: [
        'cloud_firestore',
        'firebase_storage',
        'firebase_messaging',
        'firebase_remote_config',
        'firebase_crashlytics',
        'firebase_analytics',
        'firebase_auth',
        'firebase_core',
        'firebase_dynamic_links',
        'firebase_messaging',
        'flutter',
        'flutter_localizations',
        'flutter_test',
        'dart',
      ],
    },
  ],
  prHourlyLimit: 0,
  prConcurrentLimit: 0,
  labels: [
    'Type: Renovate',
  ],
  configMigration: true,
  dependencyDashboard: false,
}
